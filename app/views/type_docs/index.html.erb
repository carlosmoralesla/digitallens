
<h1 align="center">Tipos de Documento</h1>
<br>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>BÃºsqueda</h4>
  </div>
  <div class="panel-body">
    <%= form_for @query, url: [:search,:type_docs], html: { method: 'post'}  do %> 
      <p><label>Tipo de Documento:</label>
      <%= text_field_tag "search_name", params[:search_name], class: "form-control" %></p>
      <p><%= submit_tag "Buscar",:class=>"btn bg-color-blueDark txt-color-white" %></p> 
    <% end %>
  </div>
</div>

<br>
<%= link_to 'Nuevo Tipo de Documento', new_type_doc_path, class: "btn btn-primary" %>
<br><br>

<div class="table-responsive">
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>Tipo de Cliente</th>
        <th>Nombre</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
    <% @type_docs.each do |type_doc| %>
      <tr>
        <td><%= type_doc.type_client.name %></td>
        <td><%= type_doc.name %></td>
        <td>
        <%= link_to "<span class='glyphicon glyphicon-zoom-in' aria-hidden='true'></span>".html_safe, type_doc, class: "btn btn-info" %>
        <%= link_to "<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>".html_safe, edit_type_doc_path(type_doc) ,class: "btn btn-success"  %>
        <%= link_to "<span class='glyphicon glyphicon-trash' aria-hidden='true'></span>".html_safe, type_doc, class: "btn btn-danger",method: :delete, data: { confirm: 'Estas seguro?' } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div  class="col-sm-6 text-main"><br/><br/>
  <%= page_entries_info  @type_docs  , :page_links => false %>
</div>

<div  class="col-sm-6 text-right">
  <%= will_paginate @type_docs, :params => params, :class => 'pagination2', :previous_label=>">", :next_label => ">",inner_window: 1, outer_window: 1 %>
</div>
