<h1 align="center">Proveedores</h1>
<br>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Búsqueda</h4>
  </div>
  <div class="panel-body">
    <%= form_for @query, url: [:search,:suppliers], html: { method: 'post'}  do %> 
      <p><label>N°Documento:</label>
      <%= text_field_tag "search_name", params[:search_name], class: "form-control" %></p>
      <p><%= submit_tag "Buscar",:class=>"btn bg-color-blueDark txt-color-white" %></p> 
    <% end %>
  </div>
</div>

<br>
<%= link_to 'Nuevo Proveedor', new_supplier_path, class: "btn btn-primary" %>
<br><br>

<div class="table-responsive">
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>Tipo de Documento</th>
        <th>N°Documento</th>
        <th>Proveedor</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.type_doc.name %></td>      
        <td><%= supplier.num_doc %></td>
        <td><%= supplier.name %></td>
        <td>
        <%= link_to "<span class='glyphicon glyphicon-zoom-in' aria-hidden='true'></span>".html_safe, supplier, class: "btn btn-info"  %>
        <%= link_to "<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>".html_safe, edit_supplier_path(supplier) ,class: "btn btn-success"  %>
        <%= link_to "<span class='glyphicon glyphicon-trash' aria-hidden='true'></span>".html_safe, supplier, class: "btn btn-danger", method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div  class="col-sm-6 text-main"><br/><br/>
  <%= page_entries_info  @suppliers  , :page_links => false %>
</div>

<div  class="col-sm-6 text-right">
  <%= will_paginate @suppliers, :params => params, :class => 'pagination2', :previous_label=>">", :next_label => ">",inner_window: 1, outer_window: 1 %>
</div>




  
 