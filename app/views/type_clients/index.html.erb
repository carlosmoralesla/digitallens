<h1 align="center">Tipos de Cliente</h1>
<br>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>BÃºsqueda</h4>
  </div>
  <div class="panel-body">
    <%= form_for @query, url: [:search,:type_clients], html: { method: 'post'}  do %> 
      <p><label>Tipo de Cliente:</label>
      <%= text_field_tag "search_name", params[:search_name], class: "form-control" %></p>
      <p><%= submit_tag "Buscar",:class=>"btn bg-color-blueDark txt-color-white" %></p> 
    <% end %>
  </div>
</div>

<br>
<%= link_to 'Nuevo Tipo de Cliente', new_type_client_path, class: "btn btn-primary" %>
<br><br>

<div class="table-responsive">
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>Nombre</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
    <% @type_clients.each do |type_client| %>
      <tr>
        <td><%= type_client.name %></td>
        <td>
        <%= link_to "<span class='glyphicon glyphicon-zoom-in' aria-hidden='true'></span>".html_safe, type_client, class: "btn btn-info"  %>
        <%= link_to "<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>".html_safe, edit_type_client_path(type_client) ,class: "btn btn-success"  %>
        <%= link_to "<span class='glyphicon glyphicon-trash' aria-hidden='true'></span>".html_safe, type_client, class: "btn btn-danger", method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div  class="col-sm-6 text-main"><br/><br/>
  <%= page_entries_info  @type_clients  , :page_links => false %>
</div>

<div  class="col-sm-6 text-right">
  <%= will_paginate @type_clients, :params => params, :class => 'pagination2', :previous_label=>">", :next_label => ">",inner_window: 1, outer_window: 1 %>
</div>
