
<h1 align="center">Clientes</h1>
<br>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Búsqueda</h4>
  </div>
  <div class="panel-body">
    <%= form_for @query, url: [:search,:clients], html: { method: 'post'}  do %> 
      <p><label>N°Documento:</label>
      <%= text_field_tag "search_name", params[:search_name], class: "form-control" %></p>
      <p><%= submit_tag "Buscar",:class=>"btn bg-color-blueDark txt-color-white" %></p> 
    <% end %>
  </div>
</div>


<br>
<%= link_to 'Nuevo Cliente', new_client_path, class: "btn btn-primary" %>
<br><br>

<div class="table-responsive">
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>Documento</th>
        <th>N° Documento</th>
        <th>Nombres</th>
        <th>Apellido Paterno</th>
        <th>Apellido Materno</th>
        <th>Edad</th>
        <th>Acciones</th>
      </tr>
    </thead>

    <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.type_doc.name %></td>
        <td><%= client.num_doc %></td>
        <td><%= client.name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.second_surname %></td>
        <td><%= client.age %></td>
        <td>
        <%= link_to "<span class='glyphicon glyphicon-zoom-in' aria-hidden='true'></span>".html_safe, client , class: "btn btn-info"%>
        <%= link_to "<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>".html_safe, edit_client_path(client) ,class: "btn btn-success" %>
        <%= link_to "<span class='glyphicon glyphicon-trash' aria-hidden='true'></span>".html_safe, client, method: :delete, data: { confirm: 'Estas seguro?' },class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div  class="col-sm-6 text-main"><br/><br/>
  <%= page_entries_info  @clients  , :page_links => false %>
</div>

<div  class="col-sm-6 text-right">
  <%= will_paginate @clients, :params => params, :class => 'pagination2', :previous_label=>">", :next_label => ">",inner_window: 1, outer_window: 1 %>
</div>




